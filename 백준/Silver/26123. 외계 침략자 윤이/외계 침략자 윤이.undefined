#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int main(void)
{
	cin.tie(0)->sync_with_stdio(0);
	int n = 0, d = 0;
	cin >> n >> d;
	map<int, int>mm;
	for (int i = 0; i < n; ++i)
	{
		int a = 0;
		cin >> a;
		mm[a]++;
	}
	ll ans = 0;
	while (d--)
	{
		auto it = prev(mm.end());
		if (!it->first)
		{
			continue;
		}
		int a = it->second;
		ans += a, mm[it->first - 1] += a;
		mm.erase(it);
	}
	cout << ans;
	return 0;
}
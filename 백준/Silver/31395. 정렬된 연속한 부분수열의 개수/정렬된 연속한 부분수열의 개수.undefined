#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

int main(void)
{
	cin.tie(0)->sync_with_stdio(0);
	int n = 0;
	cin >> n;
	ll ans = 0, cur = 0, pre = -1;
	for (int i = 0; i < n; ++i)
	{
		ll a = 0;
		cin >> a;
		if (pre < a)
		{
			cur++;
		}
		else
		{
			ans += cur * (cur + 1) / 2;
			cur = 1;
		}
		pre = a;
	}
	cout << ans + cur * (cur + 1) / 2;
	return 0;
}
#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
#define MOD 1000000007

int main(void)
{
	cin.tie(0)->sync_with_stdio(0);
	int T = 0;
	cin >> T;
	auto power = [&](ll exp)
		{
			ll res = 1, base = 2;
			while (exp)
			{
				if (exp & 1)
				{
					res = (res * base) % MOD;
				}
				base = (base * base) % MOD;
				exp >>= 1;
			}
			return res;
		};
	while (T--)
	{
		ll a = 0;
		cin >> a;
		cout << power(max(a - 2, 0LL)) << '\n';
	}
	return 0;
}
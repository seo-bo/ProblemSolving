#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int main(void)
{
	cin.tie(0)->sync_with_stdio(0);
	int n = 0, k = 0;
	cin >> n >> k;
	vector<int>v(n);
	for (auto& i : v)
	{
		cin >> i;
	}
	int pivot = v[0];
	for (int i = 1; i < n; ++i)
	{
		if (pivot - v[i] > k)
		{
			cout << "NO";
			return 0;
		}
		pivot = max(pivot, v[i]);
	}
	cout << "YES";
	return 0;
}
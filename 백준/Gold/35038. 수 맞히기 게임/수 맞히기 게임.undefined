#include<bits/stdc++.h>
#include "game.h"
using namespace std;
typedef long long ll;

int mj1000j(int N, int K)
{
	if (K == 0)
	{
		return 0;
	}
	return ((N / (2 * K)) & 1);
}

int anchor(int M, int K, int C)
{
	if (K == 0)
	{
		return M;
	}
	if (M < K)
	{
		return M + K;
	}
	if ((((M - K) / (2 * K)) & 1) == C)
	{
		return M - K;
	}
	return M + K;
}